<div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 p-3">
  <div class="border bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
    {% if product.featured_image %}
      <a href="{{ product.url }}">
        <img
          src="{{ product.featured_image | img_url: '600x600' }}"
          alt="{{ product.title | escape }}"
          class="w-full h-80 object-cover bg-gray-100"
          loading="lazy"
        >
      </a>
    {% else %}
      {{ 'product-1' | placeholder_svg_tag: 'w-full h-80 object-cover bg-gray-100' }}
    {% endif %}

    <div class="flex flex-col p-4">
      <span class="text-sm text-gray-400">{{ product.vendor }}</span>
      <a href="{{ product.url }}" class="uppercase text-lg font-medium text-gray-700 my-2 hover:text-blue-600 transition-colors duration-200">
        {{ product.title }}
      </a>
      <span class="text-base text-gray-500">
        {{ product.price | money }}
      </span>
    </div>
  </div>
</div>

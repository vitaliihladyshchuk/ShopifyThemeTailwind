<div class="max-w-2xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8" x-data>
  <h1 class="text-2xl font-bold text-gray-700 mb-8">Account</h1>

  <div class="block md:flex md:gap-12">
    {% assign number_of_orders = customer.orders | size %}
    {% if number_of_orders > 0 %}
      <div class="w-full md:flex-1 my-6 md:my-12">
        <h2 class="text-xl font-bold text-gray-700 mb-6">Order history</h2>

        {% paginate customer.orders by 10 %}
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
            {% for order in customer.orders %}
              <div
                x-data="{ open: false }"
                class="relative bg-white rounded-lg shadow-md overflow-hidden"
              >
                <div class="w-full h-64 bg-gray-200 rounded-t-md overflow-hidden cursor-pointer" @click="open = !open" aria-expanded="false" :aria-expanded="open.toString()">
                  {% assign image = order.line_items.first.image %}
                  {% if image %}
                    <img
                      class="w-full h-full object-center object-cover"
                      src="{{ image | image_url: width: 400 }}"
                      alt="{{ image.alt | escape }}"
                      width="{{ image.width }}"
                      height="{{ image.height }}"
                    >
                  {% else %}
                    {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-center object-cover' }}
                  {% endif %}
                </div>

                <div class="p-4 flex flex-col justify-between h-36 cursor-pointer" @click="open = !open">
                  <h3 class="text-sm font-semibold text-gray-700 mb-1">
                    <a href="{{ order.customer_url }}" class="hover:underline">{{ order.name }}</a>
                  </h3>
                  <p class="text-sm text-gray-500 mb-3">{{ order.financial_status_label }}</p>

                  <div class="flex justify-between items-center">
                    <span class="text-xs font-semibold text-white bg-gray-700 rounded-full px-3 py-1">
                      {{ order.fulfillment_status_label }}
                    </span>
                    <span class="text-sm font-medium text-gray-900">{{ order.total_price | money }}</span>
                  </div>
                </div>

                <!-- Деталі замовлення, що розгортаються -->
                <div
                  x-show="open"
                  x-transition
                  class="border-t p-4 bg-gray-50 text-sm text-gray-700"
                  style="display: none;"
                >
                  <h4 class="font-semibold mb-2">Order details:</h4>
                  <ul class="list-disc pl-5 space-y-1">
                    {% for line_item in order.line_items %}
                      <li>
                        {{ line_item.quantity }} × {{ line_item.title }}
                        {% if line_item.variant_title != blank %}
                          — {{ line_item.variant_title }}
                        {% endif %}
                      </li>
                    {% endfor %}
                  </ul>
                  <p class="mt-2">Ordered on: {{ order.created_at | date: "%b %d, %Y" }}</p>
                </div>
              </div>
            {% endfor %}
          </div>

          <div class="max-w-6xl mx-auto mt-8">
            {% render 'pagination', pagination: paginate %}
          </div>
        {% endpaginate %}
      </div>
    {% else %}
      <div class="w-full h-80 flex items-center justify-center">
        <h2 class="text-base md:text-2xl font-medium text-gray-600">
          You currently don't have any orders
        </h2>
      </div>
    {% endif %}

    <div class="w-full md:w-1/4 bg-white p-6 rounded-lg shadow-md mt-12 md:mt-0">
      <h2 class="text-xl font-bold text-gray-700 mb-6">Account details</h2>

      <div class="text-gray-700 mb-4">
        {{ customer.default_address | format_address }}
      </div>

      <a href="{{ routes.account_addresses_url }}" class="text-sm text-blue-600 hover:text-blue-900 underline">
        View addresses
      </a>
    </div>
  </div>
</div>

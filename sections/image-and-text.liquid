<div class="{% if section.settings.full_width %}w-full{% else %}max-w-7xl mx-auto{% endif %} px-4 py-12">
  <div class="
  flex
  {% if section.settings.reverse_mobile %}
    flex-col-reverse
  {% else %}
    flex-col
  {% endif %}
  gap-10 items-center
  {% if section.settings.image_position == 'right' %}
    md:flex-row-reverse
  {% else %}
    md:flex-row
  {% endif %}
">
  
    <div class="w-full md:w-1/2">
      {% if section.settings.media_type == 'image' and section.settings.image != blank %}
        <img
          src="{{ section.settings.image | image_url: '800x' }}"
          alt="{{ section.settings.heading | escape }}"
          class="w-full h-auto rounded-md shadow-md"
          width="{{ section.settings.image.width }}"
          height="{{ section.settings.image.height }}"
        />
      {% elsif section.settings.media_type == 'video' and section.settings.video_url != blank %}
        <div class="aspect-video w-full rounded-md overflow-hidden shadow-md">
          <iframe
            class="w-full h-full"
            src="{{ section.settings.video_url | replace: 'watch?v=', 'embed/' }}"
            title="{{ section.settings.heading | escape }}"
            frameborder="0"
            allowfullscreen
          ></iframe>
        </div>
      {% endif %}
    </div>

    <div class="w-full md:w-1/2">
      {% if section.settings.heading != blank %}
        <h2 class="text-3xl font-bold mb-4">{{ section.settings.heading }}</h2>
      {% endif %}
      
      {% if section.settings.text != blank %}
        <p class="text-lg text-gray-700 whitespace-pre-line mb-6">
          {{ section.settings.text }}
        </p>
      {% endif %}

      {% if section.settings.link != blank %}
        <a
          href="{{ section.settings.link }}"
          class="inline-block px-6 py-2 rounded transition font-medium text-white {{ section.settings.button_color }}"
        >
          {{ section.settings.link_text | escape }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image and Text Pro",
  "settings": [
    {
      "type": "select",
      "id": "media_type",
      "label": "Media Type",
      "default": "image",
      "options": [
        {
          "value": "image",
          "label": "Image"
        },
        {
          "value": "video",
          "label": "YouTube Video"
        }
      ]
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "YouTube Video URL",
      "info": "Only works when media type is set to video."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your heading here"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Your text here"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link URL"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text",
      "default": "Learn more"
    },
    {
      "type": "select",
      "id": "button_color",
      "label": "Button Color",
      "default": "bg-blue-600 hover:bg-blue-700",
      "options": [
        { "value": "bg-blue-600 hover:bg-blue-700", "label": "Blue" },
        { "value": "bg-green-600 hover:bg-green-700", "label": "Green" },
        { "value": "bg-red-600 hover:bg-red-700", "label": "Red" },
        { "value": "bg-black hover:bg-gray-800", "label": "Black" }
      ]
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position (desktop)",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "checkbox",
      "id": "reverse_mobile",
      "label": "Reverse Order on Mobile",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Image and Text Pro"
    }
  ]
}
{% endschema %}

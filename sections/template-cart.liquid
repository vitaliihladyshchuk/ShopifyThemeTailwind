{% if cart.item_count > 0 %}
  <div class="p-4 bg-gray-50 min-h-screen">
    <div class="max-w-6xl mx-auto flex flex-col my-10">
      <div class="flex items-end justify-between mb-8">
        <h1 class="text-3xl font-extrabold text-gray-900">Your cart</h1>
        <a href="{{ routes.all_products_collection_url }}" class="text-blue-600 hover:text-blue-800 font-medium underline">
          Continue shopping
        </a>
      </div>

      <form action="{{ routes.cart_url }}" method="POST" novalidate class="overflow-x-auto">
        <table class="table-auto w-full border-collapse border border-gray-200 divide-y divide-gray-200">
          <thead class="bg-gray-100">
            <tr>
              <th class="px-6 py-3 text-left text-sm font-semibold text-gray-600">Product</th>
              <th class="px-6 py-3 text-left text-sm font-semibold text-gray-600">Details</th>
              <th class="px-6 py-3 text-left text-sm font-semibold text-gray-600">Quantity</th>
              <th class="px-6 py-3 text-left text-sm font-semibold text-gray-600">Total Price</th>
              <th class="px-6 py-3"></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            {% for item in cart.items %}
              <tr>
                <td class="px-4 py-3">
                  <a href="{{ item.url }}" class="block w-20 h-20 overflow-hidden rounded border border-gray-300">
                    {% if item.image %}
                      {% assign image = item.image %}
                      <img
                        src="{{ image | image_url: width: 200 }}"
                        alt="{{ item.title | escape }}"
                        width="{{ image.width }}"
                        height="{{ image.height }}"
                        class="w-full h-full object-cover"
                      />
                    {% else %}
                      {{ 'product-1' | placeholder_svg_tag: 'w-20 h-20 object-cover bg-gray-200' }}
                    {% endif %}
                  </a>
                </td>
                <td class="px-4 py-3">
                  <a href="{{ item.url }}" class="text-lg font-semibold text-gray-900 hover:text-blue-600 transition">
                    {{ item.product.title | truncatewords: 7 }}
                  </a>
                  <div class="text-sm text-gray-500 mt-1">{{ item.variant.title }}</div>
                </td>
                <td class="px-4 py-3">
                  <input
                    type="number"
                    name="updates[]"
                    value="{{ item.quantity }}"
                    min="1"
                    id="updates_{{ forloop.index }}"
                    class="w-20 border border-gray-300 rounded px-2 py-1 text-center focus:outline-none focus:ring-2 focus:ring-blue-500"
                  />
                </td>
                <td class="px-4 py-3 text-gray-900 font-medium">{{ item.line_price | money }}</td>
                <td class="px-4 py-3 text-center">
                  <a href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity=0" class="text-red-600 hover:text-red-800" aria-label="Remove item">
                    {% render 'icon-close' %}
                  </a>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>

        <div class="flex flex-col md:flex-row items-start md:items-center justify-between mt-8 gap-6">
          <div class="w-full md:w-2/3">
            <label for="cart_notes" class="block mb-2 font-semibold text-gray-700">Cart notes</label>
            <textarea
              name="note"
              id="cart_notes"
              class="w-full h-24 resize-none border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
              placeholder="Add a note to your order (optional)"
            ></textarea>
          </div>

          <div class="w-full md:w-1/3 flex flex-col gap-4">
            <div class="text-xl font-semibold text-gray-900">Subtotal: {{ cart.total_price | money }}</div>
            <button
              type="submit"
              name="update"
              class="w-full bg-white border border-gray-700 text-gray-700 font-semibold px-4 py-3 rounded hover:bg-gray-100 transition"
            >
              Update
            </button>
            <button
              type="submit"
              name="checkout"
              class="w-full bg-gray-900 text-white font-semibold px-4 py-3 rounded hover:bg-gray-700 transition"
            >
              Checkout
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
{% else %}
  <div class="max-w-4xl h-60 my-12 mx-auto flex flex-col items-center justify-center text-center">
    <h1 class="text-3xl font-extrabold mb-4 text-gray-900">Your cart is empty</h1>
    <a
      href="{{ routes.all_products_collection_url }}"
      class="inline-block px-8 py-3 bg-gray-900 text-white rounded hover:bg-gray-700 transition"
    >
      Continue shopping
    </a>
  </div>
{% endif %}

 {% schema %}
    {
  "name": "Cart Template",
  "max_blocks": 3,
  "blocks": [
    {
      "type": "subtotal",
      "name": "Subtotal"
    },
    {
      "type": "update_button",
      "name": "Update Button"
    },
    {
      "type": "checkout_button",
      "name": "Checkout Button"
    }
  ],
  "settings": []
}

{% endschema %} 
<footer class="bg-gray-900 text-gray-200 mt-12" role="contentinfo">
  <div class="max-w-7xl mx-auto px-4 py-12 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Store Info -->
      <div class="text-white">
        <a href="/" class="text-2xl font-bold mb-4 block w-20" aria-label="Home">
          {% render 'logo' %}
        </a>
        <p class="text-sm mb-2">{{ shop.description | default: "Your favorite store for quality products." }}</p>
        <p class="text-xs text-gray-400">&copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. All rights reserved.</p>
      </div>

      <!-- Navigation -->
      <div class="text-white">
        <h3 class="text-md font-semibold mb-3">Menu</h3>
        <ul class="space-y-2">
          <li><a href="/" class="hover:underline">Home</a></li>
          <li><a href="/collections/all" class="hover:underline">Catalog</a></li>
          <li><a href="/pages/contact" class="hover:underline">Contact</a></li>
        </ul>
      </div>

      <!-- Policies -->
      <div class="text-white">
        <h3 class="text-md font-semibold mb-3">Info</h3>
        <ul class="space-y-2">
          {% if shop.policies.privacy_policy %}
            <li><a href="{{ shop.policies.privacy_policy.url }}" class="hover:underline">Privacy Policy</a></li>
          {% endif %}
          {% if shop.policies.refund_policy %}
            <li><a href="{{ shop.policies.refund_policy.url }}" class="hover:underline">Refund Policy</a></li>
          {% endif %}
          {% if shop.policies.shipping_policy %}
            <li><a href="{{ shop.policies.shipping_policy.url }}" class="hover:underline">Shipping Policy</a></li>
          {% endif %}
          {% if shop.policies.terms_of_service %}
            <li><a href="{{ shop.policies.terms_of_service.url }}" class="hover:underline">Terms of Service</a></li>
          {% endif %}
        </ul>
      </div>

      <!-- Newsletter -->
      <div class="text-white">
        <h3 class="text-md font-semibold mb-3">Subscribe</h3>
        <form method="post" action="/contact#footer-newsletter" accept-charset="UTF-8" class="flex flex-col gap-2">
          <input type="hidden" name="form_type" value="customer">
          <input type="hidden" name="utf8" value="âœ“">
          <label for="footer-email" class="sr-only">Email</label>
          <input
            id="footer-email"
            type="email"
            name="contact[email]"
            class="px-3 py-2 rounded bg-gray-800 text-gray-100 border border-gray-700 focus:outline-none"
            placeholder="Your email"
            required
          >
          <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white rounded px-3 py-2 mt-1">Subscribe</button>
        </form>
      </div>
    </div>


<div class="w-full py-8 bg-gray-100">
  <div class=" mx-auto">
    <div class="swiper-{{ section.id }} swiper h-64"
        x-data
        x-init="new Swiper($el, {
        loop: false,
        slidesPerView: 1,
        spaceBetween: 24,
        pagination: {
            el: '.swiper-pagination',
            clickable: true
        },
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev'
        }
        })">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="flex flex-col items-center justify-center h-64 bg-white rounded shadow p-6">
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | img_url: 'large' }}" alt="{{ block.settings.title | escape }}" class="mb-4 w-full max-h-96 object-contain">
              {% endif %}
              <div class="absolute bottom-0 left-0 p-4 bg-white bg-opacity-90 rounded-b">
                {% if block.settings.title != blank %}
                <h3 class="text-xl font-bold mb-2">{{ block.settings.title }}</h3>
              {% endif %}
              {% if block.settings.text != blank %}
                <p class="text-gray-600">{{ block.settings.text }}</p>
              {% endif %}
              {% if block.settings.button_label != blank and block.settings.button_link != blank %}
                <a href="{{ block.settings.button_link }}" class="mt-4 inline-block px-5 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">
                  {{ block.settings.button_label }}
                </a>
              {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="swiper-pagination"></div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Slider",
  "max_blocks": 10,
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slider",
      "category": "Media"
    }
  ]
}
{% endschema %}
<article class="py-8" itemscope itemtype="http://schema.org/BlogPosting">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'article_title' %}
        <div class="flex items-center justify-center">
          <div class="max-w-7xl text-center">
            <a href="{{ blog.url }}" class="text-base uppercase text-gray-500 hover:text-gray-900 font-bold">{{ blog.title }}</a>
            <h1 class="text-4xl md:text-6xl font-medium" itemprop="headline">{{ article.title }}</h1>
          </div>
        </div>

      {% when 'article_author' %}
        {% if section.settings.enable_author %}
          <div class="flex items-center justify-center mt-4">
            <div class="max-w-7xl text-center" itemscope itemtype="http://schema.org/Person">
              <small itemprop="author">{{ article.author }}</small>
            </div>
          </div>
        {% endif %}

      {% when 'article_published_date' %}
        {% if section.settings.enable_published_date %}
          <div class="flex items-center justify-center mt-2">
            <div class="max-w-7xl text-center">
              <time itemprop="datePublished dateCreated" datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
                {{ article.published_at | date: format: 'on_date' }}
              </time>
            </div>
          </div>
        {% endif %}

      {% when 'featured_image' %}
        <div itemprop="image" class="max-w-7xl bg-blue-100 rounded-lg mx-2 md:mx-auto overflow-hidden my-4">
          {% if article.image != blank %}
            <img
              class="w-full h-80 md:h-96 object-cover object-center"
              width="{{ article.image.width }}"
              height="{{ article.image.height }}"
              src="{{ article.image | image_url: 'master' | image_url }}"
              alt="{{ article.image.alt | escape }}"
              loading="lazy"
            >
          {% else %}
            {% assign placeholder_image = 'lifestyle-1' %}
            {{ placeholder_image | placeholder_svg_tag: 'w-full h-80 md:h-96 object-cover object-center p-5' }}
          {% endif %}
        </div>

      {% when 'article_content' %}
        <div class="flex items-center justify-center">
          <div itemprop="articleBody" class="max-w-4xl prose prose-lg">
            {{ article.content }}
          </div>
        </div>

    {% endcase %}
  {% endfor %}
</article>

{% if blog.comments_enabled? %}
  <div id="comments" class="my-8 max-w-4xl mx-auto px-4">
    {% if article.comments_count > 0 %}
      <h2 class="text-lg mb-4 font-medium">See what people are saying</h2>

      {% paginate article.comments by 5 %}
        {% for comment in article.comments %}
          <div class="border rounded p-4 mb-4 leading-relaxed">
            <span class="comment-author font-semibold">{{ comment.author }}</span>
            <span class="text-xs text-gray-400 ml-2">{{ comment.created_at | date: format: 'default' }}</span>
            <p class="mt-2 text-sm">{{ comment.content }}</p>
          </div>
        {% endfor %}

        <div class="my-6">
          {% render 'pagination', pagination: paginate %}
        </div>
      {% endpaginate %}
    {% else %}
      <p class="text-center text-gray-600">There are no comments on this article.</p>
    {% endif %}
  </div>

  <div id="comment_form" class="mb-8 max-w-4xl mx-auto px-4">
    {% form 'new_comment', article %}
      {% if form.errors %}
        <div class="border border-red-500 bg-red-100 p-4 rounded mb-4">
          <div class="flex items-center mb-2 text-red-700 font-semibold">
            {% render 'icon-failed' %}
            <span class="ml-2">Oh no! Your comment was not posted:</span>
          </div>
          <ul class="list-decimal ml-6">
            {% for error in form.errors %}
              <li>{{ form.errors.messages[error] }}</li>
            {% endfor %}
          </ul>
        </div>
      {% elsif form.posted_successfully? %}
        <div class="flex items-center p-4 mb-4 bg-green-100 border border-green-500 rounded text-green-700 font-semibold">
          {% render 'icon-success' %}
          <span class="ml-2">Comment posted successfully.</span>
        </div>
      {% endif %}

      <div class="md:flex md:space-x-4 mb-4">
        <div class="flex-1">
          <label for="comment_author" class="block text-gray-700 font-medium uppercase text-xs mb-1">Name</label>
          <input
            type="text"
            id="comment_author"
            name="comment[author]"
            class="w-full border px-3 py-2 focus:outline-none"
            placeholder="Jane Doe"
            required
          >
        </div>
        <div class="flex-1 mt-4 md:mt-0">
          <label for="comment_email" class="block text-gray-700 font-medium uppercase text-xs mb-1">Email</label>
          <input
            type="email"
            id="comment_email"
            name="comment[email]"
            class="w-full border px-3 py-2 focus:outline-none"
            placeholder="jane@doe.com"
            required
          >
        </div>
      </div>

      <div class="mb-4">
        <label for="comment_content" class="block text-gray-700 font-medium uppercase text-xs mb-1">Comment</label>
        <textarea
          id="comment_content"
          name="comment[body]"
          class="w-full border px-3 py-2 resize-none h-24 focus:outline-none"
          required
        ></textarea>
      </div>

      <div>
        <input
          type="submit"
          value="Post comment"
          class="w-full cursor-pointer bg-gray-900 text-white py-3 rounded hover:bg-gray-700 transition"
        >
      </div>
    {% endform %}
  </div>
{% endif %}

<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "BlogPosting",
  "headline": {{ article.title | json }},
  "articleBody": {{ article.content | strip_html | json }},
  {% if article.excerpt != blank %}
    "description": {{ article.excerpt | strip_html | json }},
  {% endif %}
  {% if article.image %}
    "image": [
      {{ article.image | image_url: "medium" | prepend: "https:" | json }}
    ],
  {% endif %}
  "datePublished": {{ article.published_at | date: format: "default" | json }},
  "dateCreated": {{ article.created_at | date: format: "default" | json }},
  "author": {
    "@type": "Person",
    "name": {{ article.author | json }}
  },
  "publisher": {
    "@type": "Organization",
    "name": {{ shop.name | json }}
  }
}
</script>

{% schema %}
{
  "name": "Template Article",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_author",
      "default": true,
      "label": "Display Author Name"
    },
    {
      "type": "checkbox",
      "id": "enable_published_date",
      "default": true,
      "label": "Display Published Date"
    }
  ],
  "blocks": [
    {
      "type": "article_title",
      "name": "Title",
      "limit": 1
    },
    {
      "type": "article_author",
      "name": "Author",
      "limit": 1
    },
    {
      "type": "article_published_date",
      "name": "Published Date",
      "limit": 1
    },
    {
      "type": "featured_image",
      "name": "Thumbnail",
      "limit": 1
    },
    {
      "type": "article_content",
      "name": "Content",
      "limit": 1
    }
  ]
}
{% endschema %}
<div class="container mx-auto px-4 py-8">
  {% paginate search.results by 10 %}
    <h1 class="text-xl font-semibold my-6 text-center">Search Results</h1>

    <!-- Форма пошуку -->
    <div class="flex justify-center mb-8">
      <form action="{{ routes.search_url }}" method="get" class="flex border rounded overflow-hidden max-w-md w-full">
        <input 
          type="search" 
          name="q" 
          placeholder="Search" 
          value="{{ search.terms | escape }}"
          class="flex-grow px-4 py-2 outline-none"
          aria-label="Search"
        >
        <button type="submit" class="bg-gray-900 hover:bg-gray-700 text-white px-4 py-2">
          Search
        </button>
      </form>
    </div>

    {% if search.performed %}
      {% if search.results.size > 0 %}
        <p class="text-center text-gray-600 mb-6">
            {{ search.results.size }} result{% if search.results.size != 1 %}s{% endif %} for the search term "<span class="font-semibold">{{ search.terms | escape }}</span>"
        </p>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-6xl mx-auto">
          {% for item in search.results %}
            {% case item.object_type %}
              {% when 'product' %}
                {% render 'product-card', product_product: item %}
              {% else %}
                <!-- Можна додати шаблон для інших типів об'єктів, якщо потрібно -->
            {% endcase %}
          {% endfor %}
        </div>

        <!-- Пагінація -->
        <div class="mt-10 flex justify-center">
          {% render 'pagination', pagination: paginate %}
        </div>

      {% else %}
        <div class="text-center text-gray-500 mt-16">
          <p>No results found for the search term: <strong>{{ search.terms | escape }}</strong>.</p>
          <p>Try using different keywords or check your spelling.</p>
        </div>
      {% endif %}
    {% endif %}
  {% endpaginate %}
</div>
